<params>
    
    
			<param
        type="text"
        name="google_conversion_id"
        id="google_conversion_id"
        label="Adwords google_conversion_id"
        description="Enter your Adwords google_conversion_id"
        size="80"
		default=""
        maxLength="255" />
		
		
		<param
        type="text"
        name="google_conversion_label"
        id="google_conversion_label"
        label="Adwords conversion label"
        description="Enter your Adwords label from the conversion code"
        size="80"
		default=""
        maxLength="255" />
		
		
		
	
		
			
					<param
        type="text"
        name="sku_prefix"
        id="sku_prefix"
        label="SKU Prefix per your language"
        description="Enter your SKU prefix"
        size="80"
		default=""
		multilang="multilang"
        maxLength="255" />

		
       			<param
        type="text"
        name="sku_suffix"
        id="sku_suffix"
        label="SKU Suffix per your language"
        description="Enter your SKU suffix"
        size="80"
		default=""
		multilang="multilang"
        maxLength="255" />
		
		
       
    
